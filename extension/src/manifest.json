{
    "manifest_version": 3,
    "name": "FavTube",
    "version": "0.1.0",
    "description": "Youtubeで★とタグ付けして保存",
    "permissions": ["storage","activeTab", "scripting"],
    "host_permissions": [
        "https://www.youtube.com/*",
        "https://youtu.be/*",
        "http://localhost:8080/*"
    ],
    "background": {"service_worker": "background.js"},
    "action": {"default_title": "FavTube"},
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/watch*",
                "https://youtu.be/*",
                "https://www.youtube.com/shorts/*"
            ],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ]

}